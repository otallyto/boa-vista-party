<div class="card">
    <div class="card-body">
        <h4>Editar evento</h4>
     
        <form action="/admin/editar/evento" method="POST">
        <input type="hidden" value="{{evento._id}}" name="id">
            <label for="titulo">Título: </label>
            <input type="text" name= "title" class="form-control" value="{{evento.title}}" required>
            <label for="descricao">Descrição</label>
            <input type="text" name="description" class="form-control" value="{{evento.description}}" required>
            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control" value="{{evento.slug}}"required>
            
            
            <button class="btn btn-success mt-4" type="submit">Editar evento</button>
        </form>
    </div>
